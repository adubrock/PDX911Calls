%header
  %h1 Portland 911 Calls
  .search
    = form_tag "/search", method: "get", :class => "search-field" do
      = text_field_tag :search, "", :class => "search-input", :placeholder => "Search Calls"
      = submit_tag "â†’", :name => nil, :class => "search-button"

#map
= content_for :js do
  :javascript
    $("#map").map(#{raw @markers.to_json});

.table
  %table.calls
    %thead
      %tr
        %th Type
        %th Address
        %th Agency
        %th Last Updated
        %th Call ID #

    %tbody
      - @calls.each do |call|
        %tr
          %td= call.call_type
          %td= call.address
          %td= call.agency
          %td= call.updated_at.strftime("%B %d, %Y %I:%M %p %Z")
          %td.call_id= call.call_id

  = will_paginate

