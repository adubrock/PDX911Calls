%div{:class => "map"}
  .map
  = render 'shared/map'

%div{:class => "table"}
  %table.calls
    %thead
      %tr
        %th Type
        %th Address
        %th Agency
        %th Last Updated
        %th Call ID #

    %tbody
      - @calls.each do |call|
        %tr
          %td= call.call_type
          %td= call.address
          %td= call.agency
          %td= call.updated_at.strftime("%B %d, %Y %I:%M %p %Z")
          %td= call.call_id

  = will_paginate
