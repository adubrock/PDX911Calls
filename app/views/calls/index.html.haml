.map
= render 'shared/map'

%table.calls
  %tr
    %th Type
    %th Address
    %th Agency
    %th Call Last Updated
    %th Call ID #
    %th Latitude

  - @calls.each do |call|
    %tr
      %td= call.call_type
      %td= call.address
      %td= call.agency
      %td= call.call_last_updated
      %td= call.call_id
      %td= call.latitude
